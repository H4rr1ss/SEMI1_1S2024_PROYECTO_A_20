generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id             Int     @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String  @unique
  passportNumber Int
  phoneNumber    Int
  nationality    String
  password       String
  profilePicture String?
}

model Flight {
  id                        Int           @id @default(autoincrement())
  destinationCountry        String
  destination               String
  originCountry             String
  origin                    String
  boardingTime              String
  arrivalTime               String
  date                      String
  price                     Decimal       @db.Decimal(10, 2)
  typeFlight                String
  preventiveRecommendations String
  destinationDetail         Destination[]
}

model Destination {
  id          Int     @id @default(autoincrement())
  image       String?
  description String
  places      Place[]
  flightId    Int
  flight      Flight  @relation(fields: [flightId], references: [id])
}

model Place {
  id            Int         @id @default(autoincrement())
  name          String
  description   String
  destinationId Int
  destination   Destination @relation(fields: [destinationId], references: [id])
}
